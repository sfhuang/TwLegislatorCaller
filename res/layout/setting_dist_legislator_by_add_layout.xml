<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity" >

<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
 >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <ImageView
            android:contentDescription="@string/image_APP_LOGO"
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tff_small" />

        <TextView
            android:id="@+id/textviewSettingByAdd"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:gravity="center_horizontal"
            android:text="@+string/setting_DIST_BY_ADDRESS"
            android:textSize="24sp" />

        <Button
            android:id="@+id/buttonLiveDomestic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@+string/live_DOMESTIC"
            android:textSize="17sp"
            android:onClick="selectIfNative" />

        <Button
            android:id="@+id/buttonLiveAbroad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@+string/live_ABRAOD"
            android:textSize="17sp" />
        	        	        
        <Button
            android:id="@+id/buttonExit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@+string/previous_page"
            android:textSize="17sp"
            android:onClick="exitThisActivity" />
    </LinearLayout>

</RelativeLayout>
</ScrollView>