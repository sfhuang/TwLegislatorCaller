<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <ImageView
            android:contentDescription="@string/image_APP_LOGO"
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tff_small" />

        <TextView
            android:id="@+id/textviewPartyName"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:gravity="center_horizontal"
            android:text="@+string/call_by_party"
            android:textSize="24sp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >        

            <Button
	            android:id="@+id/buttonKMT"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
                android:layout_weight="1"
	            android:text="@+string/party_KMT"
	            android:textSize="17sp" />
	
	        <Button
	            android:id="@+id/buttonDDP"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
                android:layout_weight="1"
	            android:text="@+string/party_DDP"
	            android:textSize="17sp" />

	    </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
	            android:id="@+id/buttonPFP"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
                android:layout_weight="1"
	            android:text="@+string/party_PFP"
	            android:textSize="17sp" />
	
	        <Button
	            android:id="@+id/buttonTSU"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
                android:layout_weight="1"
	            android:text="@+string/party_TSU"
	            android:textSize="17sp" />
		</LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
	            android:id="@+id/buttonNPSU"
		        android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
                android:layout_weight="1"
	            android:text="@+string/party_NPSU"
	            android:textSize="17sp" />
	
	        <Button
	            android:id="@+id/buttonNOPARTY"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@+string/no_PARTY"
	            android:textSize="17sp" />
		</LinearLayout>        	        	        
        <Button
            android:id="@+id/buttonExit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@+string/previous_page"
            android:textSize="17sp"
            android:onClick="backPreviousPage" />
    </LinearLayout>

</RelativeLayout>